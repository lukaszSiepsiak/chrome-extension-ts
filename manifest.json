{
  "manifest_version": 3,
  "name": "Version Notifier Extension",
  "version": "0.0.1",
  "description": "Notifies user when a new extension version is available",
  "permissions": ["storage", "notifications", "tabs"],
  "background": {
    "service_worker": "dist/bundle.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "/icons/icon48.png"
  },
  "update_url": "https://lukaszsiepsiak.github.io/chrome-extension-ts/update.xml"
}
